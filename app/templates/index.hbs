<ol class='breadcrumb'>
  <li class='active'>Books</li>
</ol>
<ul class='list-unstyled'>
  {{#each}}
    <li class='row'>
      <div class='col-sm-3'>
        <a {{bind-attr href='url'}} target='_blank'>
          <img class='img-responsive' {{bind-attr src='image'}}>
        </a>
        <p class='rating text-center'>
          <strong>{{rating}}</strong>/5
        </p>
      </div>
      <div class='col-sm-9'>
        <h3>
          {{#link-to 'book' this}} {{title}} {{/link-to}}</h3>
        <p class='text-muted'><em> Written by {{author}}</em></p>

        <div>
          <p>{{review}}</p>
        </div>
      </div>
    </li>
  {{/each}}
</ul>
