<div class='col-sm-3'>
  <a {{bind-attr href='book.url'}} target='_blank'>
    <img class='img-responsive' {{bind-attr src='book.image'}}>
  </a>
  <p class='rating text-center'>
    <strong>{{book.rating}}</strong>/5
  </p>
</div>
<div class='col-sm-9'>
  <h3>{{#link-to 'book' book}} {{book.title}} {{/link-to}}</h3>
  <p class='text-muted'><em> Written by {{book.author}}</em></p>

  <div>
    <p>{{book.review}}</p>
    <a class="btn btn-primary" {{bind-attr href='book.url'}} target='_blank'>
      Buy this book
    </a>
  </div>
</div>
